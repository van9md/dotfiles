return {
  {
    "ray-x/go.nvim",
    dependencies = {
      "ray-x/guihua.lua", -- Рекомендуется для поддержки floating window
      "neovim/nvim-lspconfig", -- Для LSP
      "nvim-treesitter/nvim-treesitter", -- Для treesitter
      "L3MON4D3/LuaSnip", -- Сниппет-менеджер
      "saadparwaiz1/cmp_luasnip", -- Интеграция LuaSnip с nvim-cmp
      "rafamadriz/friendly-snippets", -- Базовые сниппеты
    },
    config = function()
      require("go").setup({
        luasnip = true, -- Включение встроенных сниппетов go.nvim
        lsp_cfg = true, -- Используем конфигурацию gopls из go.nvim
        lsp_gofumpt = true, -- Используем gofumpt для форматирования
        gofmt = 'gopls', -- Форматирование через gopls
        goimports = 'gopls', -- Импорт через gopls
      })

      -- Настройка форматирования при сохранении
      local format_sync_grp = vim.api.nvim_create_augroup("GoFormat", {})
      vim.api.nvim_create_autocmd("BufWritePre", {
        pattern = "*.go",
        callback = function()
          require('go.format').goimports()
        end,
        group = format_sync_grp,
      })

      -- Установка treesitter для Go
      require('nvim-treesitter.configs').setup {
        ensure_installed = { "go", "gomod", "gosum", "gotmpl" }, -- Убедитесь, что парсеры установлены
        highlight = { enable = true },
      }
    end,
    event = { "CmdlineEnter" },
    ft = { "go", "gomod" },
    build = ':lua require("go.install").update_all_sync()', -- Установка/обновление бинарников
  },
}
